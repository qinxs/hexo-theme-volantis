//代码块复制按钮
if hexo-config('custom_css.body.highlight.copy_btn') == true
  .highlight
    //方便copy代码按钮（btn-copy）的定位
    position: relative

  .btn-copy
    z-index: 1
    display: inline-block
    cursor: pointer
    border: none
    disable-user-select()
    -webkit-appearance: none
    font-family: Menlo, $fontfamily-code
    font-size: 11px
    font-weight: bold
    padding: $gap * 0.125 $gap * 0.375
    line-height: 2em
    >i
      margin-right: 4px
    color: var(--color-meta)
    background: transparent
    position: absolute
    top: 0
    right: 0
    opacity: 0
    trans()
    &:hover
      color: $color-hover

  .highlight:hover .btn-copy
    opacity: 1

  .article pre:hover .btn-copy
    opacity: 1
