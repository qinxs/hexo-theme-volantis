//svg图标
.github-badge
  a
    color: #fff !important
    &:hover
      text-decoration: none

.github-badge
  margin: 10px 0px 0px 10px
  display: inline-block
  border-radius: 4px
  color: #fff
  background-color: #abbac3
  line-height: 15px
  text-shadow: none

	.badge-subject
	  display: inline-block
	  background-color: #4d4d4d
	  padding: 4px 4px 4px 6px
	  border-top-left-radius: 4px
	  border-bottom-left-radius: 4px
	
	.badge-value
		display: inline-block
		padding: 4px 6px 4px 4px
		border-top-right-radius: 4px
		border-bottom-right-radius: 4px

	.bg-red
		background-color: #e05d44

	.bg-orange
		background-color: orange

	.bg-brightgreen
		background-color: #4dc820

	.bg-blue
		background-color: #007ec6

	.bg-blueviolet
		background-color: #8833d7

// 嵌入iframe
.bilibili
  position: relative
  width: 100%
  height: 0
  padding-bottom: 75%
.ixigua
  position: relative
  width: 100%
  height: 0
  padding-top: 56.25%

.bilibili,
.ixigua
  iframe
    position: absolute
    width: 100%
    height: 100%
    left: 0
    top: 0

// aplayer移动端
@media screen and (max-width: $device-mobile)
  .aplayer.aplayer-fixed.aplayer-narrow
    .aplayer-body
      left -66px !important
  
  .aplayer.aplayer-fixed.aplayer-narrow:hover
    .aplayer-body
      left: 0 !important
